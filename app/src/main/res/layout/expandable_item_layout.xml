<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="?android:listPreferredItemPaddingLeft">

            <ImageView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_delete"
                android:tint="@color/colorAccent">


            </ImageView>


            <RelativeLayout
                android:id="@+id/layout"
                android:layout_marginStart="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="80dp"
                    android:text="Name"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_additional"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_item"
                    android:layout_marginStart="5dp"
                    android:paddingEnd="45dp"
                    android:text="Additional"
                    android:textColor="@color/colorDarkerGrey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_item"
                    android:layout_alignTop="@id/txt_item"
                    android:layout_alignParentEnd="true"
                    android:paddingStart="45dp"
                    android:paddingEnd="15dp"
                    android:text="#"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/bar"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_centerInParent="true"
                    android:alpha="0"
                    android:animateLayoutChanges="true"
                    android:background="@color/colorPrimaryDark" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorFieldDarker"/>

</LinearLayout>